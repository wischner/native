{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run app-example (Make build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/app_example/app-example",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",          // <---- THIS!
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "CMake Build (Make)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        {
        "name": "Run app-example (MSVC)",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/examples/app_example/app-example.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "console": "integratedTerminal",
        "preLaunchTask": "CMake Build (MSVC)"
        }
              
    ]
}
