{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure (Make)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "Unix Makefiles",               // Force Makefiles
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake Build (Make)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",                 // Change to Release!
                "-j", "8"
            ],
            "problemMatcher": "$gcc",                // Use $msCompile for MSVC!
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake Configure (Make)"]
        },
        {
            "label": "CMake Clean (Make)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "clean"
            ],
            "problemMatcher": [],
            "group": "build"
        }
    ]
}