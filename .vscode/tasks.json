{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure (linux-x11, Docker)",
      "type": "shell",
      "command": "cmake",
      "args": ["-S",".","-B","build","-G","Unix Makefiles","-Dvariant=linux-x11"],
      "problemMatcher": []
    },
    {
      "label": "Build (linux-x11, Docker)",
      "type": "shell",
      "options": { "env": { "WSF": "${workspaceFolder}" } },
      "command": "bash",
      "args": [
        "-lc",
        "set -o pipefail; cmake --build build --target docker_build_linux_x11 -- -j $(nproc) 2>&1 | sed -e \"s|/work|$WSF|g\""
      ],
      "dependsOn": "Configure (linux-x11, Docker)",
      "problemMatcher": [{ "base": "$gcc", "fileLocation": "absolute" }],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "Clean (linux-x11)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build","build","--target","clean"],
      "problemMatcher": []
    }
  ]
}
