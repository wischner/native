{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run app-example (Make build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/app-example/app-example",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",          // <---- THIS!
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "CMake Build (Make)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
